<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del botón -->
    <solid android:color="@color/white" /> <!-- Cambia el color según tu diseño -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="20dp" /> <!-- Ajusta el valor para hacer las esquinas más o menos redondeadas -->
    <!-- Opcional: Agregar un borde al botón -->
    <stroke
        android:width="2dp"
        android:color="@color/black" /> <!-- Cambia el color y el ancho según tus necesidades -->
</shape>
