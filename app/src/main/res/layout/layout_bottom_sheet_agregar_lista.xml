<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título de la ventana emergente -->
    <TextView
        android:id="@+id/tv_add_lista_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir colección"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tv_add_collection_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce un nombre de colección."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Campo de entrada para el nombre de la colección -->
    <EditText
        android:id="@+id/et_lista_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de colección"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Botón de confirmar -->
    <Button
        android:id="@+id/btn_confirmar_add_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✔"
        android:background="@drawable/boton_redondeado"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="18sp" />
</LinearLayout>
